    "gulp": "^3.8.5",
    "gulp-autoprefixer": "^0.0.8",
    "gulp-cache": "^0.2.0",
    "gulp-changed": "^0.4.0",
    "gulp-csso": "^0.2.9",
    "gulp-flatten": "^0.0.2",
    "gulp-if": "^1.2.1",
    "gulp-imagemin": "^0.6.1",
    "gulp-jshint": "^1.6.3",
    "gulp-load-plugins": "^0.5.3",
    "gulp-minify-html": "^0.1.4",
    "gulp-replace": "^0.4.0",
    "gulp-ruby-sass": "^0.5.0",
    "gulp-size": "^0.4.0",
    "gulp-uglify": "^0.3.1",
    "gulp-uncss": "^0.4.4",
    "gulp-useref": "^0.5.0",
    "jshint-stylish": "^0.3.0",
    "opn": "^0.1.2",
    "psi": "^0.1.1",
    "require-dir": "^0.1.0",
    "run-sequence": "^0.3.6",
    
    "karma": "~0.10",
    "protractor": "~0.20.1",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2"    
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "git": "gulp && git status | grep 'working directory clean' >/dev/null || (echo 'Please commit all changes generated by building'; exit 1)",

    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000",

    "pretest": "npm install",
    "test": "karma start test/karma.conf.js",
    "test-single-run": "karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/angular-index-async.html');\""
  }
}
